doctype
include ./include/asciiart
html(prefix='og: http://ogp.me/ns#', lang='de')
	head
		include ./include/metatags
		include ./include/opengraphtags
		include ./include/twittercardtags
		include ./include/styles
	body
		include ./include/header
		main.margin-top-sm-51
			.container
				.row.margin-top-15.margin-top-sm-24.margin-bottom-15.margin-bottom-sm-24
					.col-xs-12.col-md-4.col-md-offset-4
						.row.bg-white.thumbnail.margin-0
							form(accept-charset="utf-8", name="login", action="/login", method="post")
								fieldset.col-xs-12.padding-top-9.padding-bottom-9
									.form-group
										h3 Mach mit!
									.form-group
										label.sr-only(for="email-login") Email
										.input-group
											span.input-group-addon.input-sm
												i.fa.fa-user.fa-fw
											input#email-login.form-control.input-sm(type="email", name="email", placeholder="name[at]domain.com")
									.form-group
										label.sr-only(for="password-login") Passwort
										.input-group.margin-bottom-3
											span.input-group-addon.input-sm
												i.fa.fa-lock.fa-fw
											input#password-login.form-control.input-sm(type="password", name="password", placeholder="●●●●●")
										a.pull-right.small(href="/login") Passwort vergessen?
									.checkbox.margin-bottom-3
										label.input-sm
											input(type="checkbox", name="remember", value="true")
											| Angemeldet bleiben
									input.btn.btn-success.btn-sm(type="submit" value="Los gehts!")
									a.btn.btn-info.btn-sm.margin-left-6(href="/register") Registrieren
							.col-xs-12.padding-bottom-12
								hr.margin-top-9.margin-bottom-15
								p
									a.btn.btn-twitter.btn-block.btn-xs(href="/auth/twitter")
										i.fa.fa-twitter.padding-right-3
										| Anmelden mit Twitter
								p
									a.btn.btn-gplus.btn-block.btn-xs(href="/auth/google")
										i.fa.fa-google-plus.padding-right-3
										| Anmelden mit Google
								p.margin-bottom-0
									a.btn.btn-facebook.btn-block.btn-xs(href="/auth/facebook")
										i.fa.fa-facebook.padding-right-3
										| Anmelden mit Facebook
		include ./include/footer
		include ./include/tracking
