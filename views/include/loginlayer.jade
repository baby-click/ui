.login.dropdown-menu
  if !user
    form(accept-charset="utf-8", role="form" action="/login", method="post")
      fieldset.col-xs-12.padding-top-9.padding-bottom-9
        .form-group
          h3 Mach mit!
        .form-group
          label.sr-only(for="username") Username
          .input-group
            span.input-group-addon.input-sm
              i.fa.fa-user.fa-fw
            input#username.form-control.input-sm(type="text", name="username", placeholder="username")
        .form-group
          label.sr-only(for="password") Passwort
          .input-group.margin-bottom-3
            span.input-group-addon.input-sm
              i.fa.fa-lock.fa-fw
            input#password.form-control.input-sm(type="password", name="password", placeholder="●●●●●")
          a.pull-right.small(href="/login") Passwort vergessen?
        .checkbox.margin-bottom-3
          label.input-sm
            input(type="checkbox", name="remember", value="true")
            | Angemeldet bleiben
        input.btn.btn-success.btn-sm(type="submit", value="Anmelden") 
        a.btn.btn-info.btn-sm.margin-left-6(href="/register") Registrieren
  else
    p.col-xs-12.padding-top-6 Hi 
      strong= user.username
    ul.list-unstyled.padding-left-12.padding-right-12
      li
        a(href="/user/profile") Profil
      li
        a(href="/user/dashboard") Dashboard
      li
        a(href="/user/inbox") Nachrichten
      li
        a(href="/user/settings") Einstellungen
      li
        a(href='/logout') Abmelden
