.login.dropdown-menu
	if !user
		.col-xs-12.padding-top-9.padding-bottom-9
			form(name="login" action="/login", method="post", accept-charset="utf-8")
				.form-group
					h3 Mach mit!
				.form-group
					label.sr-only(for="email") Email
					.input-group
						span.input-group-addon.input-sm
							i.fa.fa-user.fa-fw
						input#email.form-control.input-sm(type="text", name="email", placeholder="email")
				.form-group
					label.sr-only(for="password") Passwort
					.input-group.margin-bottom-3
						span.input-group-addon.input-sm
							i.fa.fa-lock.fa-fw
						input#password.form-control.input-sm(type="password", name="password", placeholder="●●●●●")
					a.pull-right.small(href="/login") Passwort vergessen?
				.checkbox.margin-bottom-3
					label.input-sm
						input(type="checkbox", name="remember", value="true")
						| Angemeldet bleiben
				input.btn.btn-success.btn-sm(type="submit", value="Anmelden") 
				a.btn.btn-info.btn-sm.margin-left-6(href="/register") Registrieren
		.col-xs-12.padding-bottom-9
			hr.margin-top-9.margin-bottom-15
			p
				a.btn.btn-twitter.btn-block.btn-xs(href="/auth/twitter")
					i.fa.fa-twitter.padding-right-3
					| Anmelden mit Twitter
			p
				a.btn.btn-gplus.btn-block.btn-xs(href="/auth/google")
					i.fa.fa-google-plus.padding-right-3
					| Anmelden mit Google
			p.margin-bottom-0
				a.btn.btn-facebook.btn-block.btn-xs(href="/auth/facebook")
					i.fa.fa-facebook.padding-right-3
					| Anmelden mit Facebook
	else
		p.col-xs-12.padding-top-6 Hi 
			strong= user.email
		ul.list-unstyled.padding-left-12.padding-right-12
			li
				a(href="/account/profile") Profil
			li
				a(href="/account/") Account
			li
				a(href="/account/dashboard") Dashboard
			li
				a(href="/account/inbox") Nachrichten
			li
				a(href="/account/settings") Einstellungen
			li
				a(href='/logout') Abmelden
