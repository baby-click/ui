doctype html
html(prefix="og: http://ogp.me/ns#", lang="de")
	head
		include /include/metatags
		include /include/styles
	body
		include /include/header
		main.margin-top-sm-51
			.container
				.row.margin-top-15.margin-top-sm-24.margin-bottom-15.margin-bottom-sm-24
					.col-xs-12.col-md-4.col-md-offset-4
						.row.bg-white.thumbnail.margin-0
							form(name="login", action="/connect/local", method="post", accept-charset="utf-8")
								fieldset.col-xs-12.padding-top-9.padding-bottom-9
									.form-group
										h3 Verbinden
									.form-group
										label.sr-only(for="email") Email
										.input-group
											span.input-group-addon.input-sm
												i.fa.fa-user.fa-fw
											input#email.form-control.input-sm(type="email", name="email", placeholder="name[at]domain.com")
									.form-group
										label.sr-only(for="password") Passwort
										.input-group.margin-bottom-3
											span.input-group-addon.input-sm
												i.fa.fa-lock.fa-fw
											input#password.form-control.input-sm(type="password", name="password", placeholder="●●●●●")
									input.btn.btn-success.btn-sm(type="submit", value="Speichern")
							a(href='/account') Zurück zum profile
		include /include/footer
